@import "../src/layout/grid"

// == Support =============================================================
clearfix()
  *zoom: 1
  &:before, &:after
    content: ""
    display: table
  &:after
    clear: both

body > div
  clearfix()
  margin-bottom: 100px

h1
  font-weight: normal

h1, p
  padding: 10px 20px
  
header
  margin-bottom: 1em
  background: black
  color: #fff

article, section
  background: #ececea
  height: 200px

header, article, section
  border-radius: 5px



// ========================================================================
.constrained
  width:        960px
  margin-left:  auto
  margin-right: auto
  overflow:     hidden


#fixed-layout
  header
    jsk-grid-make-column: 12
    margin-bottom: 1em

#fixed-layout, #maximum-width
  #content
    jsk-grid-make-column: 9

  #sidebar
    jsk-grid-make-column: 3


jsk-grid-width = 100%

#fluid-layout
  #content
    jsk-grid-make-column: 9

  #sidebar
    jsk-grid-make-column: 3


#nested
  #content
    jsk-grid-make-column: 9
    background: #fff

    #boxes
      jsk-grid-make-row: 9
      li
        jsk-grid-make-column(3, 9)
        margin-bottom: 1em
        background: #ececea
        padding: 20px 0
        text-align: center

  #sidebar
    jsk-grid-make-column: 3


#responsive
  #content
    jsk-grid-make-column: 9

  #sidebar
    jsk-grid-make-column: 3

  @media screen and (max-width: 720px)
    #content, #sidebar
      jsk-grid-make-column: 12
      margin-bottom: 1em
    